# Test Environment Configuration
# Copy this file to .env.test and fill in your provider credentials
# 
# Only the generic OIDC provider tests can run offline (with mock provider).
# All other provider tests require live credentials.

# =============================================================================
# Session Secrets (Required for all tests)
# =============================================================================
NUXT_OIDC_SESSION_SECRET=your-session-secret-at-least-48-characters-long-here
NUXT_OIDC_TOKEN_KEY=your-token-key-at-least-48-characters-long-here-too
NUXT_OIDC_AUTH_SESSION_SECRET=your-auth-session-secret-48-chars-minimum

# =============================================================================
# Auth0 Provider
# =============================================================================
NUXT_OIDC_PROVIDERS_AUTH0_CLIENT_ID=
NUXT_OIDC_PROVIDERS_AUTH0_CLIENT_SECRET=
NUXT_OIDC_PROVIDERS_AUTH0_BASE_URL=https://your-tenant.auth0.com

# =============================================================================
# AWS Cognito Provider
# =============================================================================
NUXT_OIDC_PROVIDERS_COGNITO_CLIENT_ID=
NUXT_OIDC_PROVIDERS_COGNITO_CLIENT_SECRET=
NUXT_OIDC_PROVIDERS_COGNITO_BASE_URL=https://your-pool.auth.region.amazoncognito.com

# =============================================================================
# Microsoft Entra (Azure AD) Provider
# =============================================================================
NUXT_OIDC_PROVIDERS_ENTRA_CLIENT_ID=
NUXT_OIDC_PROVIDERS_ENTRA_CLIENT_SECRET=
NUXT_OIDC_PROVIDERS_ENTRA_TENANT_ID=

# =============================================================================
# GitHub Provider
# =============================================================================
NUXT_OIDC_PROVIDERS_GITHUB_CLIENT_ID=
NUXT_OIDC_PROVIDERS_GITHUB_CLIENT_SECRET=

# =============================================================================
# Keycloak Provider (Disabled by default - requires running server)
# =============================================================================
# Set NUXT_OIDC_TEST_ENABLE_KEYCLOAK=true to enable Keycloak tests
NUXT_OIDC_TEST_ENABLE_KEYCLOAK=false
NUXT_OIDC_PROVIDERS_KEYCLOAK_CLIENT_ID=
NUXT_OIDC_PROVIDERS_KEYCLOAK_CLIENT_SECRET=
NUXT_OIDC_PROVIDERS_KEYCLOAK_BASE_URL=http://localhost:8080/realms/nuxt-oidc-test

# =============================================================================
# Logto Provider
# =============================================================================
NUXT_OIDC_PROVIDERS_LOGTO_CLIENT_ID=
NUXT_OIDC_PROVIDERS_LOGTO_CLIENT_SECRET=
NUXT_OIDC_PROVIDERS_LOGTO_BASE_URL=

# =============================================================================
# Microsoft Provider
# =============================================================================
NUXT_OIDC_PROVIDERS_MICROSOFT_CLIENT_ID=
NUXT_OIDC_PROVIDERS_MICROSOFT_CLIENT_SECRET=

# =============================================================================
# PayPal Provider
# =============================================================================
NUXT_OIDC_PROVIDERS_PAYPAL_CLIENT_ID=
NUXT_OIDC_PROVIDERS_PAYPAL_CLIENT_SECRET=

# =============================================================================
# Zitadel Provider
# =============================================================================
NUXT_OIDC_PROVIDERS_ZITADEL_CLIENT_ID=
NUXT_OIDC_PROVIDERS_ZITADEL_CLIENT_SECRET=
NUXT_OIDC_PROVIDERS_ZITADEL_BASE_URL=

# =============================================================================
# Test User Credentials (for E2E tests)
# =============================================================================
# These are used by Playwright to fill in login forms during E2E tests
TEST_USER_USERNAME=testuser
TEST_USER_PASSWORD=testpassword
